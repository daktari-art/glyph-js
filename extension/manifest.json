{
  "manifest_version": 3,
  "name": "Glyph Debugger",
  "version": "2.0", 
  "description": "Visual data flow programming debugger",
  
  "devtools_page": "devtools.html",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "runtime/state-manager.js",
        "runtime/analysis-utility.js",
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ]
}
