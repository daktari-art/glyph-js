{
  "manifest_version": 3,
  "name": "Glyph Language DevTools",
  "version": "1.0",
  "description": "Visual data flow programming environment and JavaScript-to-Glyph converter",
  "devtools_page": "devtools.html",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [{
    "resources": ["glyph-runtime.js"],
    "matches": ["<all_urls>"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
