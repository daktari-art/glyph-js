{
  "manifest_version": 3,
  "name": "Glyph.js - Visual Execution Tracer",
  "version": "1.0.0",
  "description": "Visual execution tracing and time-travel debugging",
  
  "devtools_page": "devtools.html",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png", 
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
