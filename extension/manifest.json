{
  "manifest_version": 3,
  "name": "Glyph Language Debugger",
  "version": "1.0",
  "description": "Visual data flow programming debugger",
  
  "devtools_page": "devtools.html",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
